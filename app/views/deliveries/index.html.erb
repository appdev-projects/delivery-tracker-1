<div>
 <div>
 <%= notice %>
 <%= alert %>
 <h1>
 Delivery Tracker
 </h1>
   
   
 <p>Know if something gets lost in the mail.</p>

 </div>
</div>

<hr>

<div>
 <div>
 <h2>
 Expecting a package?
 </h2>
             


 <form action="/insert_delivery" method="post">
      
        
  

 <input type="hidden" id="user_id_box" name="query_user_id" value="<%= %>">
    

 <div>
 <label for="description_box">
 Description
 </label>

 <input type="text" id="description_box" name="query_description">
 </div>

 <div>
 <label for="supposed_to_arrive_on_box">
 Supposed to arrive on
 </label>

 <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
 </div>

 <div>
 <label for="details_box">
 Details
 </label>

 <textarea id="details_box" name="query_details" rows="3"></textarea>
 </div>

 <button>
 Log delivery
 </button>
 </form>
 </div>
</div>

<hr>
<div>
 <div>
    
      



<div class="waiting_on">
 <h2>Waiting on</h2>
<% @waiting_on.each do |delivery| %>
 <ul>
 <li>
 <div><%=delivery.description%></div>

 <div style="color: red">
 Supposed to arrive on <%=delivery.supposed_to_arrive_on %>
          
 </div>

 <div>
          <%=delivery.details%>
 </div>

 <div>
 <form action="/modify_delivery/<%=delivery.id%>" method="post">
 <input type="hidden" name="arrived" value="true">

 <button>Mark as received</button>
 </form>
 </div>
 </ul>
 <br>
     
      <% end %>
 </div>
 <hr>

 <div class="received">
 <h2>Received</h2>
<%@received.each do |delivery|%>
 <ul>
 <li>
 <div><%=delivery.description%></div>

 <div>
 <small>
 Updated <%=delivery.updated_at%>

 <a href="/delete_delivery/<%=delivery.id%>">Delete</a>
 </small>
 </div>
 </li>
 </ul>
 <%end%>
</div>
</div>
