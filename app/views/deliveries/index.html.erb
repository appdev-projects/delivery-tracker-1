<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>

    <p>Know if something gets lotst in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea type="text" id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<h2>Waiting on</h2>

<ul>
<% @list_of_deliveries.where(:user_id => current_user.id).where(:arrived => false).each do |a_delivery| %>
  <li>
  <div><%=a_delivery.description%><div>
  <div>Supposed to arrive on <%=a_delivery.supposed_to_arrive_on%><div>
  <div><%=a_delivery.details%><div>
  </li>

</ul>

      
      <tr>
        <td>
          <%= a_delivery.id %>
        </td>

        <td>
          <%= a_delivery.user_id %>
        </td>

        <td>
          <%= a_delivery.description %>
        </td>

        <td>
          <%= a_delivery.details %>
        </td>

        <td>
          <%= a_delivery.supposed_to_arrive_on %>
        </td>

        <td>
          <%= a_delivery.arrived %>
        </td>

        <td>
          <%= time_ago_in_words(a_delivery.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_delivery.updated_at) %> ago
        </td>

        <td>
          <a href="/deliveries/<%= a_delivery.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
