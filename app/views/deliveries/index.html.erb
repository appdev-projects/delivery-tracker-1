<div>
  <p>Signed in successfully.</p>
  <div>
    <h1>
      Delivery Tracker
    </h1>
  </div>
  <p>Know if something gets lost in the mail.</p>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea type="text" id="details_box" name="query_details" rows=3></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div style="background-color: lightgoldenrodyellow;">
  <h2>Waiting on</h2>
  <div>
    <ul>
      <% @list_of_deliveries.each do |a_delivery| %>
        <% if a_delivery.user_id == current_user.id && !(a_delivery.arrived) %>
          <li>
            <div><%= a_delivery.description %></div>
            <div>Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %></div>
            <div><%= a_delivery.details %></div>
            <div><button>Mark as received</button></div>
            <br>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
<hr>
<div style="background-color: lightgreen;">
  <h2>Received</h2>
  <div>
    <ul>
      <% @list_of_deliveries.each do |a_delivery| %>
        <% if a_delivery.user_id == current_user.id && (a_delivery.arrived) %>
          <li>
            <div><%= a_delivery.description %></div>
            <div>Updated <%= time_ago_in_words(a_delivery.updated_at) %> ago<a href="/delete_delivery/<%= a_delivery.id %>">Delete</a></div>
            <br>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
