<div>
  <div>
    <h1>
      Package #<%= @the_package.id %> details
    </h1>

    <div>
      <div>
        <a href="/packages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_package/<%= @the_package.id %>">
          Delete package
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_package.description %>
      </dd>

      <dt>
        Delivery date
      </dt>
      <dd>
        <%= @the_package.delivery_date %>
      </dd>

      <dt>
        Details
      </dt>
      <dd>
        <%= @the_package.details %>
      </dd>

      <dt>
        Delivery status
      </dt>
      <dd>
        <%= @the_package.delivery_status %>
      </dd>

      <dt>
        Created on
      </dt>
      <dd>
        <%= @the_package.created_on %>
      </dd>

      <dt>
        Updated on
      </dt>
      <dd>
        <%= @the_package.updated_on %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_package.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_package.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit package
    </h2>

    <form action="/modify_package/<%= @the_package.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_package.description %>">
      </div>

      <div>
        <label for="delivery_date_box">
          Delivery date
        </label>

        <input type="date" id="delivery_date_box" name="query_delivery_date" value="<%= @the_package.delivery_date %>">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details"><%= @the_package.details %></textarea>
      </div>

      <div>
        <input type="checkbox" id="delivery_status_box" name="query_delivery_status" value="1" <%= "checked" if @the_package.delivery_status %>>

        <label for="delivery_status_box">
            Delivery status
        </label>
      </div>

      <div>
        <label for="created_on_box">
          Created on
        </label>

        <input type="datetime-local" id="created_on_box" name="query_created_on"
         value="<%= @the_package.created_on %>">
      </div>

      <div>
        <label for="updated_on_box">
          Updated on
        </label>

        <input type="datetime-local" id="updated_on_box" name="query_updated_on"
         value="<%= @the_package.updated_on %>">
      </div>

      <button>
        Update package
      </button>
    </form>
  </div>
</div>

<hr>
